<% provide(:title, "Verify login change") %>

<div class="flex-grow flex items-center justify-center">
  <div class="wrapper w-full mx-5 md:w-1/3 md:mx-0 bg-white p-8 rounded-lg shadow-lg">
    <div class="flex-1 space-y-4">
      <h1 class="text-xl text-black mb-5">Verify Login Change</h1>
      <%= form_with url: rodauth.verify_login_change_path, method: :post, data: { turbo: false }, class: "w-full max-w-sm" do |form| %>
        <%= form.submit rodauth.verify_login_change_button, class: "w-full px-8 py-3 cursor-pointer font-semibold text-sm rounded-full text-white bg-black/90 hover:bg-black/80 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black/60 dark:bg-emerald-400 dark:hover:bg-emerald-500 dark:text-gray-900 dark:focus:ring-emerald-400 dark:focus:ring-offset-current" %>
      <% end %>
    </div>
  </div>
</div>
