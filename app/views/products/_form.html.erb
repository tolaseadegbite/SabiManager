<div class="px-3">
  <%= form_with(model: [business, product], data: { turbo: false }, class: "w-full space-y-6") do |form| %>

    <!-- Render errors only if they exist -->
    <%= render 'layouts/errors', form: form %>

    <div>
      <%= form.label :name, class: "block text-sm font-semibold" %>
      <%= form.text_field :name, class: "focus:ring-black/80 focus:border-black/80 mt-2 text-sm w-full px-3 py-2 border rounded-md dark:bg-gray-900 dark:text-gray-100 dark:focus:bg-gray-800 border-gray-300 dark:border-gray-700 dark:focus:border-emerald-400 dark:focus:ring-emerald-400", required: true %>
    </div>

    <div>
      <%= form.label "Description (optional)", class: "block text-sm font-semibold" %>
      <%= form.text_area :description, class: "focus:ring-black/80 focus:border-black/80 mt-2 text-sm w-full px-3 py-2 border rounded-md dark:bg-gray-900 dark:text-gray-100 dark:focus:bg-gray-800 border-gray-300 dark:border-gray-700 dark:focus:border-emerald-400 dark:focus:ring-emerald-400", required: true %>
    </div>

    <div>
      <%= form.label :category, class: "block text-sm font-semibold" %>
      <%= form.select :product_category_id, ProductCategory.all.pluck(:name, :id), { include_blank: "Select category" }, class: "mt-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 cursor-pointer", required: true %>
    </div>

    <div class="grid md:grid-cols-2 md:gap-6">
      <div class="field items-center">
        <div class="flex items-center">
          <%= form.check_box :negotiable, class: "h-4 w-4 text-black focus:ring-black/80 border-gray-300 rounded dark:bg-gray-900 dark:border-gray-700 dark:focus:ring-black/80 cursor-pointer" %>
          <%= form.label :negotiable, "Negotiable?", class: "ml-2 block text-sm font-semibold cursor-pointer" %>
        </div>
      </div>
      
      <div class="field">
        <%= form.label :stock_quantity, class: "block text-sm font-semibold" %>
        <%= form.text_field :stock_quantity, class: "focus:ring-black/80 focus:border-black/80 mt-2 text-sm w-full px-3 py-2 border rounded-md dark:bg-gray-900 dark:text-gray-100 dark:focus:bg-gray-800 border-gray-300 dark:border-gray-700 dark:focus:border-emerald-400 dark:focus:ring-emerald-400", required: true %>
      </div>
    </div>

    <div>
      <%= form.label "Product image", class: "block text-sm font-semibold" %>
      <%= form.file_field "product image", class: "mt-2 block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>
    </div>

    <%= form.submit "Save", class: "px-8 py-3 cursor-pointer font-semibold text-sm rounded-lg text-white bg-black/90 hover:bg-black/80 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black/60 dark:bg-emerald-400 dark:hover:bg-emerald-500 dark:text-gray-900 dark:focus:ring-emerald-400 dark:focus:ring-offset-current" %>
  <% end %>
</div>