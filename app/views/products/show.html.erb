<% provide(:title, sanitize(@product.name)) %>

<%= render 'businesses/components/sidebar' %>

<div class="p-4 lg:ml-18.5rem mt-4.4rem bg-white rounded-lg m-3 border">
    <nav class="flex mb-5" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
            <li class="inline-flex items-center">
                <%= link_to businesses_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-gray-600 dark:text-gray-400 dark:hover:text-white" do %>
                    <svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
                    </svg>
                    My businesses
                <% end %>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                    </svg>
                    <%= link_to @business.name, dashboard_business_path(@business), class: "ms-1 text-sm font-medium text-gray-700 hover:text-gray-600 md:ms-2 dark:text-gray-400 dark:hover:text-white" %>
                </div>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                    </svg>
                    <%= link_to 'Products', business_products_path(@business), class: "ms-1 text-sm font-medium text-gray-700 hover:text-gray-600 md:ms-2 dark:text-gray-400 dark:hover:text-white" %>
                </div>
            </li>
            <li aria-current="page">
                <div class="flex items-center">
                    <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                    </svg>
                    <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400"><%= @product.name %></span>
                </div>
            </li>
        </ol>
    </nav>

    <div class="flex gap-2 items-center justify-between mb-3">
        <div class="flex gap-2 items-center mb-2">
            <%= link_to sanitize("&larr;"), business_products_path(@business) %>
            <h1 class="font-bold text-xl"><%= @product.name %></h1>
        </div>

        <div>
            <%= link_to edit_business_product_path(@business, @product), class: "inline-flex items-center px-2 py-2 text-sm font-medium text-center text-white bg-gray-900 rounded-lg hover:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-gray-300 dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800 gap-1" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                </svg>
            <% end %>

            <%= link_to business_product_path(@business, @product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "inline-flex items-center px-2 py-2 text-sm font-medium text-center text-white bg-gray-900 rounded-lg hover:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-gray-300 dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800 gap-1" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                </svg>
            <% end %>
        </div>
    </div>

    <%= render 'products/components/tabs' %>

    <div class="mt-5 border rounded-lg">
        <ul>
            <li>
                <div class="flex gap-20 border-b p-4">
                    <h6 class="font-semibold w-32">
                        Name
                    </h6>

                    <span>
                        <%= @product.name %>
                    </span>
                </div>
            </li>
            <li>
                <div class="flex gap-20 border-b p-4">
                    <h6 class="font-semibold w-32">
                        Description
                    </h6>

                    <span>
                        <% if @product.description.present? %>
                            <%= @product.description %>
                        <% else %>
                            <p>Nil</p>
                        <% end %>
                    </span>
                </div>
            </li>
            <li>
                <div class="flex gap-20 border-b p-4">
                    <h6 class="font-semibold w-32">
                        Negotiable?
                    </h6>

                    <span>
                        <%= @product.negotiable ? "Yes" : "No" %>
                    </span>
                </div>
            </li>
            <li>
                <div class="flex gap-20 border-b p-4">
                    <h6 class="font-semibold w-32">
                        Category
                    </h6>

                    <span>
                        <%= link_to @product.product_category.name, business_product_category_path(@business, @product.product_category) %>
                    </span>
                </div>
            </li>
            <% if @product.negotiable? %>
                <li>
                    <div class="flex gap-20 border-b p-4">
                        <h6 class="font-semibold w-32">
                            Min price
                        </h6>

                        <span>
                            <%= @product.min_price %>
                        </span>
                    </div>
                </li>
                <li>
                    <div class="flex gap-20 border-b p-4">
                        <h6 class="font-semibold w-32">
                            Max price
                        </h6>

                        <span>
                            <%= @product.max_price %>
                        </span>
                    </div>
                </li>
            <% else %>
                <li>
                    <div class="flex gap-20 border-b p-4">
                        <h6 class="font-semibold w-32">
                            Price
                        </h6>

                        <span>
                            <%= @product.fixed_price %>
                        </span>
                    </div>
                </li>
            <% end %>
            <li>
                <div class="flex gap-20 border-b p-4">
                    <h6 class="font-semibold w-32">
                        Stock quantity
                    </h6>

                    <span>
                        <%= @product.stock_quantity %>
                    </span>
                </div>
            </li>
            <li>
                <div class="flex gap-20 p-4">
                    <h6 class="font-semibold w-32">
                        Sales
                    </h6>

                    <span>
                        250
                    </span>
                </div>
            </li>
        </ul>
    </div>
    
</div>