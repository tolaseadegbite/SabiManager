<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 text-gray-900">
    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white text">
        <input id="default-checkbox" type="checkbox" value="" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
    </th>
    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white text">
        <%= link_to product_category.name, business_product_category_path(@business, product_category), data: { turbo_frame: "_top" } %>
    </th>
    <td class="px-6 py-4">
        <% if product_category.description.present? %>
            <%= category_tooltip_link(product_category.description, business_product_category_path(@business, product_category), "tooltip-product_category-description-#{product_category.id}", product_category.description) %>
            <%= category_tooltip_content("tooltip-product_category-description-#{product_category.id}", product_category.description) %>
        <% else %>
            Nil
        <% end %>
    </td>
    <td class="px-6 py-4">
        <%= link_to business_product_category_path(@business, product_category), data: { turbo_frame: "_top" } do %>
            210
        <% end %>
    </td>
    <td class="px-6 py-4 flex gap-5 items-center">
        <%= link_to edit_business_product_category_path(@business, product_category), class: "", data: {action: "click->dialog#open", turbo_frame: :modal} do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
            </svg>
        <% end %>

        <%= link_to business_product_category_path(@business, product_category), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg>
        <% end %>
    </td>
</tr>