<div class="w-full h-[calc(100vh-4.5rem)] wrapper">
  <div class="max-w-screen-xl mx-auto">
    <div class="max-w-screen-2xl grid grid-cols-1 md:grid-cols-[225px_minmax(100px,_1fr)] xl:grid-cols-[300px_minmax(100px,_1fr)]  h-[calc(100vh-4.1rem)] wrapper px-4">
      <div class="border-r pt-4">
        
        <%= render 'settings/components/settings_sidebar' %>
        
      </div>

      <div>
        <div class="flex gap-10 items-center py-4 pl-6">
            <%= link_to settings_path do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75 3 12m0 0 3.75-3.75M3 12h18" />
                </svg>
            <% end %>
            <h2 class="font-bold text-2xl">Account information</h2>
        </div>

        <ul>
            <li class="">
                <%= link_to name_settings_path, class: "inline-flex justify-between items-center w-full hover:bg-gray-100 px-6 p-2" do %>

                <div>
                    <p>Name</p>
                    <p class="text-sm text-gray-600"><%= current_account.profile.name %></p>
                </div>

                <span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
                    </svg>
                </span>
                <% end %>
            </li>

            <li class="">
                <%= link_to rodauth.change_login_path, class: "inline-flex justify-between items-center w-full hover:bg-gray-100 px-6 p-2" do %>

                <div>
                    <p>Email</p>
                    <p class="text-sm text-gray-600"><%= current_account.email %> (<%= current_account.status %>)</p>
                </div>

                <span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
                    </svg>
                </span>
                <% end %>
            </li>

            <li class="">
                <%= link_to account_information_settings_path, class: "inline-flex justify-between items-center w-full hover:bg-gray-100 px-6 p-2" do %>

                <div>
                    <p>Verified</p>
                    <p class="text-sm text-gray-600">Email address verified.</p>
                </div>

                <span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
                    </svg>
                </span>
                <% end %>
            </li>

            <li class="border-t border-b">
                <%= link_to account_information_settings_path, class: "inline-flex justify-between items-center w-full hover:bg-gray-100 px-6 p-2" do %>

                    <div>
                        <p>Account creation</p>
                        <p class="text-sm text-gray-600"><%= current_account.profile.created_at.strftime("%b %d, %Y, %I:%M:%S %p")
                        %></p>
                    </div>

                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
                        </svg>
                    </span>
                <% end %>
            </li>

            <li>
                <%= link_to account_information_settings_path, class: "inline-flex justify-between items-center w-full hover:bg-gray-100 px-6 p-2" do %>

                    <div>
                        <p>Prefered language</p>
                        <p class="text-sm text-gray-600">English</p>
                    </div>

                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
                        </svg>
                    </span>
                <% end %>
            </li>

        </ul>
      </div>
    </div>
  </div>
</div>
