<div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <%= link_to business do %>
        <h5 class="mb-2 text-xl font-bold tracking-tight text-gray-900 hover:text-gray-700 dark:text-white"><%= business.name %></h5>
    <% end %>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= business.description.truncate(100) %></p>
    
    <%= link_to business, class: "inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-gray-900 rounded-lg hover:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-gray-300 dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800" do %>
        Show business
        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
    <% end %>
</div>