<div class="px-6 py-5">
    <%= form_with(model: [business], data: { turbo: false }, class: "w-full") do |form| %>
        <div class="mb-6">
            <%= form.label "name", class: "block text-sm font-semibold" %>
            <%= form.text_field :name, class: "focus:ring-black/80 focus:border-black/80 mt-2 text-sm w-full px-3 py-2 border rounded-md dark:bg-gray-900 dark:text-gray-100 dark:focus:bg-gray-800", required: true %>
        </div>

        <div class="mb-6">
            <%= form.label "description", class: "block text-sm font-semibold" %>
            <%= form.text_area :description, class: "focus:ring-black/80 focus:border-black/80 mt-2 text-sm w-full px-3 py-2 border rounded-md dark:bg-gray-900 dark:text-gray-100 dark:focus:bg-gray-800" %>
        </div>

        <div class="mb-6">
            <%= form.label "currency", class: "block text-sm font-semibold" %>
            <%= select_tag 'business[currency]', options_for_select(Business::CURRENCIES.keys, @business.currency), 
            class: "mt-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 cursor-pointer" %>
        </div>

        <div class="mb-6">
            <%= form.label "tax_rate (optional)", class: "block text-sm font-semibold" %>
            <%= form.text_field :tax_rate, class: "focus:ring-black/80 focus:border-black/80 mt-2 text-sm w-full px-3 py-2 border rounded-md dark:bg-gray-900 dark:text-gray-100 dark:focus:bg-gray-800" %>
        </div>

        <div class="mb-6">
            <%= form.label "Business logo (optional)", class: "block text-sm font-semibold" %>
            <%= form.file_field :logo, class: "mt-2 block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400", data: { "profile-edit-form-target": "avatarFile", action: "change->profile-edit-form#avatarChanged" } %>
        </div>

        <%= form.submit "Save", class: "w-full px-8 py-3 cursor-pointer font-semibold text-sm rounded-lg text-white bg-black/90 hover:bg-black/80 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black/60 dark:bg-emerald-400 dark:hover:bg-emerald-500 dark:text-gray-900 dark:focus:ring-emerald-400 dark:focus:ring-offset-current" %>
    <% end %>
</div>